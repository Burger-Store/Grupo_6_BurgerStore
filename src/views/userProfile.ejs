<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<title>Profile</title>
<body>
	<%- include('partials/header') %>
	<%- include('./partials/productCart') %>
		<div class="container" style="margin-top: 40px;">
		<div class="row">
			<h1 class="main-title">Mi Usuario</h1>
			<div class="col-md-3">
				<% if(users != null) {%>
					<img src="/img/users/<%= users.image %>" alt="img" />
                <% } %>
				<p><%= users.name + ' ' + users.surname %></p>
				<p><%= users.email %></p>
                <p><%= users.phone %></p>
				<p><%= users.address %></p>
				<p><%= users.city %></p>
			</div>
            <div class="add-button">
                <form action="/user/update/<%= users.idusers %>" method="get">
                    <button class="button blue descripcion" type="submit">Editar mi usuario</button> 
                </form>
            </div>
		</div>
	</div>
	
	<%- include('partials/footer'); %>
</body>
</html>
