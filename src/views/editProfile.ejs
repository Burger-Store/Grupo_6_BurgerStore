<%- include('partials/head') %>
	<title>Profile</title>
	<%- include('partials/header') %>
    <%- include('./partials/productCart') %>
		<div class="main" >
			<div class="container">
				<h1 class="main-title">Editar Usuario</h1>
				<figure>
                    <img src="/img/users/<%= users.image%>" alt="">
                    <figcaption>
                        <span class="hide">usuario</span>
                    </figcaption>
                </figure>
                
                <form class="registration-form" action="/user/update/<%= users.idusers %>?_method=PUT"
                    method="POST" enctype="multipart/form-data">
                    <label for="name">Nombre:</label>
                    <input type="text" name="name" id="name" value="<%= users.name %>" required>
                    <label for="surname">Apellido:</label>
                    <input type="text" name="surname" id="surname" value="<%= users.surname %>" required>
					<label for="email">Email:</label>
                    <input type="text" name="email" value="<%= users.email %>" id="email" required>
                    <label for="phone">Teléfono:</label>
                    <input type="number" name="phone" value="<%- users.phone %>" id="phone" required>
                    <label for="address">Dirección:</label>
                    <input type="text" name="address" id="address" value="<%- users.address %>" required>
					<label for="lift">Departamento:</label>
                    <input type="text" name="lift" value="<%- users.lift %>" id="lift">
					<label for="city">Ciudad:</label>
                    <input type="text" name="city" id="city" value="<%= users.city %>" required>
                    <label for="state">Nacionalidad:</label>
                    <input type="text" name="state" id="state" value="<%= users.state %>" required>
                    <label for="zipcode">Código Postal:</label>
                    <input type="number" name="zipcode" id="zipcode" value="<%= users.zipcode %>" required>
                    <label for="image">Imagen:</label>
                    <input type="file" name="image" value="<%- users.image %>" accept="image/*" id="image">
                    <% if(locals.userLogged.idusertype === 1){ %>
                    <label for="idusertype">Tipo de Usuario:</label>
                    <select name="idusertype" class="select-style">
                        <% for(const tipo in tipoUsuario){  %>
                        <option value="<%= tipoUsuario[tipo].idusertype %>"> <%= tipoUsuario[tipo].type %> </option> 
                        <%}%>
                    </select>
                    <%}%>

                    <div class="add-button" style="width: 100%;">
                        <button id="detailBtn" class="button yellow descripcion" type="submit">Actualizar</button>
                    </div>
                </form>
			</div>
		</div>
		<%- include('partials/footer') %>