<!DOCTYPE html>
<html lang="en">
    <title>Menu</title>
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <%- include('./partials/productDetails') %>
    <main>
        <h1 class="main-title">Nuestras Burgers</h1>
        <div class="section-main">
            <% for(let i=0; i < allProducts.length; i++){%>
            <div class="product">
                <figure>
                    <img src="/img/products/<%= allProducts[i].image %>" alt="img">
                    <figcaption>
                        <span class="hide">Hambugesa con chedar</span>
                    </figcaption>
                </figure>
                <div class="product-description">
                    <div class="product-name"><%= allProducts[i].name%></div>
                    <p class="description"><%= allProducts[i].description %></p>
                    <div class="price">$ <%= allProducts[i].price %></div>
                    <div class="add-button">
                        <button id="detailBtn" class="button descripcion" type ="submit">Detalles</button> 
                    </div>
                </div>
            </div>
            <%}%> 
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>