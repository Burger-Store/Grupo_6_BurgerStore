<!DOCTYPE html>
<html lang="en">
    <title>Sign Up</title>
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/header',{user: undefined}) %>
    <div class="main">
        <div class="container">
            <h1 class="main-title">Registrarse</h1>
            <form  class="registration-form" action="/user/register/" method="post" enctype="multipart/form-data">
                <label for="name">Nombre:</label>
                <input type="text" name="name" id="name" class="form-control <%= locals.errors && errors.name ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.name : null %>">
                <% if (locals.errors && errors.name) { %>
                    <div class="text-danger">
                        <%= errors.name.msg %> 
                    </div>
                <% } %>

                <label for="surname">Apellido:</label>
                <input type="text" name="surname" id="surname" class="form-control <%= locals.errors && errors.surname ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.surname : null %>">
                <% if (locals.errors && errors.surname) { %>
                    <div class="text-danger">
                        <%= errors.surname.msg %> 
                    </div>
                <% } %>
                
                <label for="email">Email:</label>
                <input type="text" name="email" id="email" class="form-control <%= locals.errors && errors.email ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                        <%= errors.email.msg %>
                    </div>
                <% } %>

                <label for="password">Contraseña:</label>
                <input type="password" name="password" id="password" class="form-control <%= locals.errors && errors.password ? ' errorAlert' : ''  %>">
                <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %>
                    </div>
                <% } %>

                <label for="phone">Teléfono:</label>
                <input type="number" name="phone" id="phone" class="form-control <%= locals.errors && errors.phone ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.phone : null %>">
                <% if (locals.errors && errors.phone) { %>
                    <div class="text-danger">
                        <%= errors.phone.msg %>
                    </div>
                <% } %>


                <label for="address">Direccion:</label>
                <input type="text" name="address" id="address" class="form-control <%= locals.errors && errors.address ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.address : null %>">
                <% if (locals.errors && errors.address) { %>
                    <div class="text-danger">
                        <%= errors.address.msg %>
                    </div>
                <% } %>

                <label for="lift">Departamento:</label>
                <input type="text" name="lift" id="lift">

                <label for="city">Ciudad:</label>
                <input type="text" name="city" id="city" class="form-control <%= locals.errors && errors.city ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.city : null %>">
                <% if (locals.errors && errors.city) { %>
                    <div class="text-danger">
                        <%= errors.city.msg %>
                    </div>
                <% } %>

                <label for="state">Provincia:</label>
                <input type="state" name="state" id="state" class="form-control <%= locals.errors && errors.state ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.state : null %>">
                <% if (locals.errors && errors.state) { %>
                    <div class="text-danger">
                        <%= errors.state.msg %>
                    </div>
                <% } %>

                <label for="zipcode">Código postal:</label>
                <input type="text" name="zipcode" id="zipcode" class="form-control <%= locals.errors && errors.zipcode ? ' errorAlert' : ''  %>"
                value="<%= locals.oldData ? oldData.zipcode : null %>">
                <% if (locals.errors && errors.zipcode) { %>
                    <div class="text-danger">
                        <%= errors.zipcode.msg %>
                    </div>
                <% } %>
                <label for="image">Imagen:</label>                 
                <input type="file" name="image" accept="image/*" id="image" class="form-control<%= locals.errors && errors.image ? ' errorAlert' : ''  %>">
                <% if (locals.errors && errors.image) { %>
                    <div class="text-danger">
                        <%= errors.image.msg %>
                    </div>
                <% } %>

                <div class="add-button full-button">
                    <button class="button" type ="submit">Registrarse</button> 
                </div>
            </form>
            
        </div>
    </div>
    <%- include('./partials/footer') %>
</body>
</html>